<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="20dp"
    android:paddingHorizontal="12dp"
    android:background="@drawable/frame_goal_guide_dialog">

    <TextView
        android:id="@+id/tv_majorTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/setting_dialog_cannot_title"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/v_border"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:background="@color/bg_block_if_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_majorTitle" />

    <TextView
        android:id="@+id/tv_subTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/setting_dialog_cannot_supplement"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_border" />

    <TextView
        android:id="@+id/tv_statusNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/tv_statusAll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_subTitle"
        app:layout_constraintHorizontal_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_statusAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/setting_dialog_cannot_tutorial_status"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_statusNow"
        app:layout_constraintTop_toBottomOf="@id/tv_subTitle" />

    <ImageView
        android:id="@+id/iv_star1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:src="@drawable/baseline_not_star_24"
        app:layout_constraintEnd_toStartOf="@+id/iv_star2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_statusNow"
        app:layout_constraintHorizontal_chainStyle="packed" />

    <ImageView
        android:id="@+id/iv_star2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:src="@drawable/baseline_not_star_24"
        app:layout_constraintEnd_toStartOf="@+id/iv_star3"
        app:layout_constraintStart_toEndOf="@+id/iv_star1"
        app:layout_constraintTop_toBottomOf="@id/tv_statusNow" />

    <ImageView
        android:id="@+id/iv_star3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:src="@drawable/baseline_not_star_24"
        app:layout_constraintEnd_toStartOf="@+id/iv_star4"
        app:layout_constraintStart_toEndOf="@+id/iv_star2"
        app:layout_constraintTop_toBottomOf="@id/tv_statusNow" />

    <ImageView
        android:id="@+id/iv_star4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:src="@drawable/baseline_not_star_24"
        app:layout_constraintEnd_toStartOf="@+id/iv_star5"
        app:layout_constraintStart_toEndOf="@+id/iv_star3"
        app:layout_constraintTop_toBottomOf="@id/tv_statusNow" />

    <ImageView
        android:id="@+id/iv_star5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:src="@drawable/baseline_not_star_24"
        app:layout_constraintEnd_toStartOf="@+id/iv_star6"
        app:layout_constraintStart_toEndOf="@+id/iv_star4"
        app:layout_constraintTop_toBottomOf="@id/tv_statusNow" />

    <ImageView
        android:id="@+id/iv_star6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:src="@drawable/baseline_not_star_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_star5"
        app:layout_constraintTop_toBottomOf="@id/tv_statusNow" />


</androidx.constraintlayout.widget.ConstraintLayout>