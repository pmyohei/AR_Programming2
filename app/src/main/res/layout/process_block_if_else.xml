<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_UIRoot"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minHeight="72dp"
    android:background="@drawable/frame_if_process"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_contents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        android:text="もし、～～なら"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_do"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:text="実行"
        app:layout_constraintTop_toBottomOf="@+id/tv_contents"
        app:layout_constraintBottom_toTopOf="@+id/tv_elseContents"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ll_firstNestRoot"/>

    <LinearLayout
        android:id="@+id/ll_firstNestRoot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="260dp"
        android:minHeight="40dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="12dp"
        android:paddingTop="8dp"
        android:background="@drawable/frame_process_inside"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/tv_contents"
        app:layout_constraintStart_toEndOf="@+id/tv_do"
        app:layout_constraintEnd_toEndOf="parent">

    </LinearLayout>

    <TextView
        android:id="@+id/tv_elseContents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        android:text="そうでなければ"
        app:layout_constraintTop_toBottomOf="@+id/ll_firstNestRoot"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_do2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:text="実行"
        app:layout_constraintTop_toBottomOf="@+id/tv_elseContents"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ll_secondNestRoot"/>

    <LinearLayout
        android:id="@+id/ll_secondNestRoot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="260dp"
        android:minHeight="40dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="12dp"
        android:paddingTop="8dp"
        android:background="@drawable/frame_process_inside"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/tv_elseContents"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_do2"
        app:layout_constraintEnd_toEndOf="parent">

    </LinearLayout>

    <!--  ドロップリスナー（ドラッグされてきた処理ブロックをキャッチする） -->
    <View
        android:id="@+id/v_drop"
        android:layout_width="1dp"
        android:layout_height="@dimen/catch_drap_height"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>