<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AR_Programming" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bg_toolar</item>
        <item name="colorPrimaryVariant">@color/bg_toolar</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/bg_toolar</item>
        <item name="colorSecondaryVariant">@color/bg_toolar</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/yomogi_regular</item>
    </style>

    <!--  ツールバー スタイル  -->
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!--    戻るボタン（←）の色変更    -->
        <item name="colorControlNormal">@color/toolbar_return</item>
        <!--    titleの色変更    -->
        <item name="android:textColorPrimary">@color/toolbar_text</item>
        <item name="android:textColorSecondary">@color/toolbar_text</item>
    </style>

    <!-- AlertDialog スタイル -->
    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- テキスト色 -->
        <item name="android:textColorPrimary">@color/tx_contents</item>
        <!-- ボタン色 -->
        <item name="colorAccent">@color/tx_ui</item>
        <!-- 背景色 -->
        <item name="android:background">@color/bg_retry_dialog</item>
        <!-- font -->
        <item name="android:fontFamily">@font/yomogi_regular</item>
    </style>

    <style name="Theme.AR_Programming.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- NumberPicker スタイル -->
    <style name="NumberPickerStyle" parent="Theme.AppCompat.Light.NoActionBar" >
        <!--    テキスト色    -->
        <item name="android:textColorPrimary">@color/teal_700</item>
        <!--    区切り線    -->
        <item name="android:colorControlNormal">@color/teal_700</item>
    </style>

    <style name="Theme.AR_Programming.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.AR_Programming.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>