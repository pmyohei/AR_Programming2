<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AR_Programming" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--  ツールバー スタイル  -->
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!--    戻るボタン（←）の色変更    -->
        <item name="colorControlNormal">@color/purple_500</item>
        <!--    titleの色変更    -->
        <item name="android:textColorPrimary">@color/teal_200</item>
        <item name="android:textColorSecondary">@color/teal_200</item>
    </style>

    <!-- AlertDialog スタイル -->
    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--    テキスト色    -->
        <item name="android:textColorPrimary">@color/purple_500</item>
        <!--    ボタン色    -->
        <item name="colorAccent">@color/teal_200</item>
        <!--    背景色    -->
        <item name="android:background">@color/white</item>
    </style>


    <style name="Theme.AR_Programming.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!-- NumberPicker スタイル -->
    <style name="NumberPickerStyle" parent="Theme.AppCompat.Light.NoActionBar" >
        <!--    テキスト色    -->
        <item name="android:textColorPrimary">@color/teal_700</item>
        <!--    区切り線    -->
        <item name="android:colorControlNormal">@color/teal_700</item>
    </style>

    <style name="Theme.AR_Programming.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.AR_Programming.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>